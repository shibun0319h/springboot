<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ka.shibun.springboot.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="ka.shibun.springboot.domain.User">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="name" property="name" />
        <result column="identitycard" property="identitycard" />
        <result column="department_id" property="departmentId" />
        <result column="jointime" property="jointime" />
        <result column="phonenum" property="phonenum" />
        <result column="education_id" property="educationId" />
        <result column="address" property="address" />
        <result column="sex_id" property="sexId" />
        <result column="birthday" property="birthday" />
        <result column="remark" property="remark" />
        <result column="state" property="state" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, username, password, name, identitycard, department_id AS departmentId, jointime, phonenum, education_id AS educationId, address, sex_id AS sexId, birthday, remark, state
    </sql>

</mapper>
